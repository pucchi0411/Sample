# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                        controllers.Application.index

# Boards

GET         /board                   controllers.BoardActions.list
POST        /board/create            controllers.BoardActions.create

# thread
GET         /:boardId/thread         controllers.ThreadActions.list(boardId:Long)
POST        /:boardId/thread/create  controllers.ThreadActions.create(boardId:Long)

# comments
GET         /:boardId/:threadId               controllers.PageActions.read(boardId:Long,threadId:Long)
POST        /:boardId/:threadId/create        controllers.PageActions.create(boardId:Long,threadId:Long)
DELETE      /:boardId/:threadId/:commentId    controllers.PageActions.delete(boardId:Long,threadId:Long,commentId:Long)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.at(path="/public", file)
