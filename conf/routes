# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index


# thread
GET         /thread               controllers.ThreadActions.list
POST        /thread/create        controllers.ThreadActions.create

# comments
GET         /:threadId            controllers.PageActions.read(threadId:Long)
POST        /:threadId/create     controllers.PageActions.create(threadId:Long)
POST        /:threadId/delete     controllers.PageActions.delete(threadId:Long)


# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file         controllers.Assets.at(path="/public", file)
